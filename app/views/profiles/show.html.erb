<h2> <%= @firstname.possessive %> profile</h2>

<section>
<div class="profile">
  
<p>
  <%= gravatar_for @member %>
</p>  
<p>
  <b>Bio:</b>
  <%= @profile.bio %>
</p>

<p>
  <b>Website:</b>
  <%= @profile.website %>
</p>
<p>
  <b>Twitter:</b>
  <%= @profile.twitter %>
</p>
<p>
  <b>Facebook:</b>
  <%= @profile.facebook %>
</p>
<p>
  <b>LinkedIn:</b>
  <%= @profile.linkedin %>
</p>

<p>
  <%= link_to 'Edit', edit_profile_path(@profile) %> | 
  <%= link_to 'Delete', profile_path(@profile), :confirm => 'Are you sure?', :method => :delete %> |
</p>

</div><!-- class=project -->
</section>

