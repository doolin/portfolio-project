<h2> <%= @profile.firstname.possessive %> profile</h2>


<% flash.each do |key, value| %>
  <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
<% end %>

<section>
<div class="profile">
  
<p>
  <%= gravatar_for @member %>
</p>  

<p>
  <b>Member name:</b>
  <%= @profile.firstname %>   <%= @profile.lastname %>
</p>
<p>
  <b>Bio:</b>
  <%= @profile.bio %>
</p>

<p>
  <b>Website:</b>
  <%= link_to @profile.website, @profile.website %>
</p>
<p>
  <b>Twitter:</b>
  <%= @profile.twitter %>
</p>
<p>
  <b>Facebook:</b>
  <%= @profile.facebook %>
</p>
<p>
  <b>LinkedIn:</b>
  <%= @profile.linkedin %>
</p>

  <%= render 'profile_links' %>

</div><!-- class=project -->
</section>

