
<% title(@member.firstname + " " + @member.lastname.possessive + ' Profile') %>

<!-- Why is this flash message here? -->
<% flash.each do |key, value| %>
  <%= content_tag :div, value, :class => "alert-box success flash #{key}" unless value.blank? %>
<% end %>

<section>
<div class="profile">

  <%= render 'profile_header' %>

  <div class="profile_contact cf">
    
    <h3 class="alignLeft">Contact Information</h3>
    <div class="inner alignRight">
      <p>
        <b>Website:</b>
        <% if @profile.website? %>
          <%= link_to @profile.website, @profile.website, :class => 'website' %>
        <% else %>
          <span class="non-given">no website given</span>
        <% end %>
      </p>

      <p>
        <b>Google: </b>
        <% if @profile.gprofile_url? %>
          <%= link_to 'profile', @profile.gprofile_url, :rel => 'me', :class => 'gprofile' %>
        <% else %>
          <span class="non-given">no Google profile given</span>
        <% end %>
      </p>

      <p>
        <b>Twitter:</b>
        <% if @profile.twitter? %>
          <%= link_to @profile.twitter, @profile.twitter, :class => 'twitter' %>
        <% else %>
          <span class="non-given">no Twitter profile given</span>
        <% end %>
      </p>

      <p>
        <b>Facebook:</b>
        <% if @profile.facebook? %>
          <%= link_to @profile.facebook, @profile.facebook, :class => 'facebook' %>
        <% else %>
          <span class="non-given">no Facebook profile given</span>
        <% end %>
      </p>

      <p>
        <b>LinkedIn:</b>
        <%= @profile.linkedin %>
        <% if @profile.linkedin? %>
          <%= link_to @profile.linkedin, @profile.linkedin, :class => 'linkedin' %>
        <% else %>
          <span class="non-given">no LinkedIn profile given</span>
        <% end %>
      </p>

    </div>
  </div>

  <div class="profile_bio cf">
    <h3 class="alignLeft">Biography</h3>   
    <div class="inner alignRight">
      <p>
        <b>Bio:</b>
        <%= @profile.bio %>
      </p>   
    </div>  

  </div>

  <div class="profile_projects cf">
   <h3 class="alignLeft">Projects</h3> 
   <div class="inner alignRight">
       <div class='project-listing'>
         <%= render :partial => "profiles/projects", :collection => @projects, :as => "project" %>
       </div>
   </div>
  </div>

</div><!-- class=project -->
</section>

