<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Starting date' %><br />
    <%= f.date_select(:startdate, :start_year => 1990) %>
  </div>
  <div class="field">
    <%= f.label 'Finishing date (leave blank for "Present")' %><br />
    <%= f.date_select(:finishdate, :start_year => 1990) %>
  </div>
  <div class="field" id="summary">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :size => "60x12" %>
  </div>
  <div class="field" id="description">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "60x24"%>
  </div>
  <div class="field" id="requiredskills">
    <%= f.label "Required Skills" %><br />
    <%= f.text_area :requiredskills, :size => "60x6"%>
  </div>
  <div class="field">
    <%= f.label :client %><br />
    <%= f.text_field :client %>
  </div>
  <div class="field">
    <%= f.label "Anchor text for project link" %><br />
    <%= f.text_field :uri_anchor %>
  </div>
  <div class="field">
    <%= f.label "Link to project" %><br />
    <%= f.text_field :uri %>
  </div>
  <div class="field">
    <%= f.label "Point of contact" %><br />
    <%= f.text_field :pointofcontact %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
