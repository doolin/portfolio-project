<h2 class="projects-listing">All Projects</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
    <th>Description</th>
    <th>Client</th>
    <th>Tags</th>
    <th>Owner</th>
  </tr>


<% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, project %></td>
    <td><%= project.summary %></td>
    <td><%= project.description %></td>
    <td><%= project.client %></td>
    <td><%= project.tags %></td>
    <td><%= link_to project.membername(project.member_id), '/members/'+project.member_id.to_s  %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Project', new_project_path %>
