
<% title "Project display" %>


<section>
<div class="project">

  <% flash.each do |key, value| %>
    <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
  <% end %>

  <h1 class="name fn">
    <%= @project.name %>
  </h1>
  

  <div class="summary">
    <span class="label">Summary:</span>
    <%= @project.summary %>
  </div>

  <div class="dates">
    <span class="label">Dates:</span>
    <span class="start-date"><%= @project.startdate.strftime("%B %Y") %></span>
    <em>to </em>
    <span class="end-date"><%= @project.finishdate.strftime("%B %Y") %></span>
  </div>

  <div class="description">
    <span class="label">Description:</span>
    <%= @project.description.html_safe %>
  </div>

  <% if @project.requiredskills %>
  <div class="requiredskills">
    <span class="label">Required skills:</span>
    <%= @project.requiredskills.html_safe unless @project.requiredskills.blank? %>
  </div>
  <% end %>

  <% if @project.client %>
  <div class="client">
    <span class="label">Client:</span>
    <%= @project.client %>
  </div>
  <% end %>


  <% if @project.uri %>
  <div class="uri">
    <span class="label">Link to project:</span>
    <%= link_to @project.uri, @project.uri %>
  </div>
  <% end %>

  <% if @project.pointofcontact %>
  <div class="point-of-contact">
    <span class="label">Point of contact:</span>
    <%= @project.pointofcontact %>
  </div>
  <% end %>

  <div class="tags">
    <span class="label">Tags:</span>
    <%= @project.tags %>
  </div>

  <%= render 'project_links' %>

</div><!-- class=project -->
</section>

