- title(@member.firstname + " " + @member.lastname)
%h2
  Projects for #{@member.firstname + " " + @member.lastname}
.row
  .eight.columns.project
    .project-listing
      = render :partial => "profiles/projects", :collection => @projects, :as => "project"
  .three.columns.offset-by-one
    = gravatar_for @member
    %br/
    %br/
    %strong
      = @member.firstname
      = @member.lastname
    |
    %strong
      = link_to "Profile", @profile, :rel => 'author'
    %br/
    %strong Projects
    = @member.projects.count
    %br/
    = link_to "New Project", new_project_path, :class => "cta cta-yellow"
    %br/
